<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TimeForThePlanet.ViewModels;assembly=TimeForThePlanet"
             xmlns:resources="clr-namespace:TimeForThePlanet.Resources;assembly=TimeForThePlanet"
             x:Class="TimeForThePlanet.Views.MainPage"
             x:DataType="viewModels:MainPageViewModel"
             NavigationPage.HasNavigationBar="False">
    <StackLayout Padding="16">
        <Label Text="{Static resources:Resources.Welcome}" 
               FontSize="40" 
               HorizontalTextAlignment="Center" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"/>

        <Image HeightRequest="200"
               Source="time.png" />

        <Button Text="{Static resources:Resources.Galaxy}" 
                VerticalOptions="StartAndExpand" 
                Command="{Binding GoToGalaxyOfActionCommand}"/>

        <Button Text="{Static resources:Resources.BecomeActionnary}" 
                VerticalOptions="StartAndExpand" 
                Command="{Binding GoToBecomeActionnaryCommand}"/>
    </StackLayout>
</ContentPage>

